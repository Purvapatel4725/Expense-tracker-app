<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<main class="container pb-5">
    <div class="row">
        <div class="offset-md-2 col-md-8 text-center">
            <h1 class="text-center mt-5">Expense Tracker</h1>
            <div class="card mt-5" style="background-color: #202020; color: #fff;">
                <div class="card-header bg-dark text-white">
                    <h3 class="text-center">Add New Expense</h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="/expense/addExpense">
                        <div class="mb-3">
                            <label for="amount" class="form-label">Amount</label>
                            <input type="number" class="form-control" id="amount" placeholder="Enter the amount" name="amount" required>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-select" id="category" name="category" required>
                                <option value="" selected disabled>Select a category</option>
                                <option value="Rent">Rent</option>
                                <option value="Utilities">Utilities</option>
                                <option value="Food">Food</option>
                                <option value="Entertainment">Entertainment</option>
                                <option value="Insurance">Insurance</option>
                                <option value="Communications">Communications</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" placeholder="Enter description" name="description" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="date" class="form-label">Date</label>
                            <input type="date" class="form-control" id="date" name="date" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-plus me-2"></i> Add Expense
                            </button>
                            <a href="/expense/expenseList" class="btn btn-warning">
                                <i class="fas fa-undo me-2"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
